{
  "name": "Speech50",
  "description": "Text to speech by SpeechSynthesis web api",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/speech50_16.png",
      "32": "/images/speech50_32.png",
      "48": "/images/speech50_48.png",
      "128": "/images/speech50_128.png"
    }
  },
  "icons": {
    "16": "/images/speech50_16.png",
    "32": "/images/speech50_32.png",
    "48": "/images/speech50_48.png",
    "128": "/images/speech50_128.png"
  },
  "options_page": "options.html"
}
